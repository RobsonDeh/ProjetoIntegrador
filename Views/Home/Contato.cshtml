@model Contact

@{
    ViewData["Title"] = "Contato";
}



    <!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>afrikaTranças</title>
    <link rel="stylesheet" href="~/css/afrika.css" />
</head>

<header>
  <h1 class="titulo">Afrikatranças</h1>
    
</header>
<div class="barra">
    <nav class="navbar navbar-expand-lg ">
      <div class="container-fluid">
        <a class="navbar-brand" href="Index">Inicio</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a asp-controller="home" asp-action="Quemsomos">Quem somos</a>
              <a asp-controller="home" asp-action="Produtos">Produtos</a>
              <a asp-controller="home" asp-action="TratamentoNaturais">Tratamentos Naturais</a>
              <a asp-controller="home" asp-action="Contato">Contato</a>

            </li>

          </ul>

        </div>
      </div>
    </nav>

<body class="corpo">
    <div class="container">
    

    
        <h1>Entre em contato conosco</h1>
        <br>
        <form  method="POST"  asp-action="Contato">
            <p>
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome">
            </p>
            <p>
                <label asp-for="Telefone">Telefone:</label>
                <input asp-for="Telefone">
            </p>
            <p>
                <label asp-for="Cidade">Cidade:</label>
                <input asp-for="Cidade">
            </p>

            <p>
                <label for="Pergunta">Faça uma pergunta!</label>
                <input asp-for="Pergunta" >
    
                
            <p>
                <input type="submit" value="Enviar">
            </p>



        </form>
        
    </div>
</body>




